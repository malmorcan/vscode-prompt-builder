{
  "name": "vscode-prompt-builder",
  "displayName": "LLM Prompt Builder",
  "description": "Easily build prompts with atached files or dirs as code context and preview them directly in VSCode",
  "version": "0.0.4",
  "publisher": "fcxmarquez",
  "keywords": [
    "prompt",
    "prompt engineering",
    "AI",
    "codebase context",
    "LLM",
    "developer tools",
    "context builder",
    "files selection",
    "prompt builder"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "AI",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:myPromptExtension.openPromptPanel"
  ],
  "repository": {
  "type": "git",
    "url": "https://github.com/fcxmarquez/vscode-prompt-builder"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "myPromptExtension.openPromptPanel",
        "title": "Open Prompt Panel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ignore": "^6.0.2",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "gpt-tokenizer": "^2.7.0"
  }
}
